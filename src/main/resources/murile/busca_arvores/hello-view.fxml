<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="16" styleClass="container" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="murile.busca_arvores.controller.MainController">

  <padding>
    <Insets bottom="24" left="16" right="16" top="24" />
  </padding>

  <!-- Seção: Seleção de arquivo -->
  <VBox spacing="12" styleClass="card">
    <Label styleClass="h2" text="Selecione um arquivo para análise" />

    <HBox alignment="CENTER_LEFT" spacing="12">
      <Button onAction="#onChooseFile" styleClass="btn" text="Escolher arquivo" />
      <Button onAction="#onProcessFile" styleClass="btn-primary" text="Processar Arquivo" />
      <Label fx:id="arquivoSelecionadoLabel" styleClass="muted" text="Nenhum arquivo selecionado" />
    </HBox>

    <Label fx:id="selecioneArquivoLabel" styleClass="help" text="Selecione apenas arquivos .txt" />
  </VBox>

  <!-- Seção: Resultados -->
  <VBox spacing="12" styleClass="card">
    <Label styleClass="h2" text="Resultados da Análise" />
    <TextArea fx:id="outputArea" editable="false" prefRowCount="16" styleClass="output" wrapText="true" />
  </VBox>

</VBox>
